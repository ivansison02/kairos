<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lyt_location"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_small"
        android:layout_marginStart="@dimen/view_margin_medium"
        tools:text="Location"
        style="@style/TextAppearance.ContentTitle"/>

    <TextView
        android:id="@+id/txt_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/view_margin_medium"
        android:layout_below="@+id/txt_address1"
        tools:text="Country"
        style="@style/TextAppearance.ContentBody"/>
    
    <ImageView
        android:id="@+id/img_action"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/view_margin_medium"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/ic_setting"
        tools:tint="@android:color/darker_gray"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/view_margin_small"
        android:layout_marginStart="@dimen/view_margin_medium"
        android:layout_marginEnd="@dimen/view_margin_medium"
        android:layout_below="@+id/txt_address2"
        android:background="@color/colorShimmer"/>
</RelativeLayout>